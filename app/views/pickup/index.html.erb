</div>
<div class="main2">

  <!--word-->
  <div class="leaves">
	<% @words.each do |word| %>
		<div class="dragg">
			<% if word.color == "green" %>
				<div class="words" style="background-color: #00bb85;">
			<% elsif word.color == "red" %>
				<div class="words" style="background-color: #f62e36;">
			<% elsif word.color == "blue" %>
				<div class="words" style="background-color: #0078ba;">
			<% elsif word.color == "yellow" %>
				<div class="words" style="background-color: #d7c447;">
			<% elsif word.color == "gray" %>
				<div class="words" style="background-color: #9caeb7;">
			<% end %>
				<div class="words__edit">
					<%= link_to edit_word_path(word), method: :get do %>
						<span class="glyphicon glyphicon-edit" aria-hidden="true" style="color: white;"></span>
					<% end %>
				</div>
				<div class="words__pickup">
						<% if word.pickup == 1 %>
							<span class="glyphicon glyphicon-ok" aria-hidden="true" style="color: white;"></span>
						<% end %>
				</div>
				<div class="words__destroy">
					<%= link_to word_path(word), method: :delete, data: { confirm: "本当に削除しますか？" } do %>
						<span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: white;" ></span>
					<% end %>
				</div>
				<div class="words__content">
					<div class="word-text">
						<div class="word-text__ttl">
							<%= word.name %>
						</div>
						<div class="word-text__body">
							<%= simple_format(word.body) %>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>
  </div>

  <!--memo-->
  <div class="leaves">
	<% @memos.each do |memo| %>
		<div id="container">
		<div class="dragg">
		<% if memo.color == "green" %>
			<div class="memos" style="background-color: #00bb85;">
		<% elsif memo.color == "red" %>
			<div class="memos" style="background-color: #f62e36;">
		<% elsif memo.color == "blue" %>
			<div class="memos" style="background-color: #0078ba;">
		<% elsif memo.color == "yellow" %>
			<div class="memos" style="background-color: #d7c447;">
		<% elsif memo.color == "gray" %>
			<div class="memos" style="background-color: #9caeb7;">
		<% end %>

				<div class="memos__edit">
					<%= link_to edit_memo_path(memo) do %>
						<span class="glyphicon glyphicon-edit" aria-hidden="true" style="color: white;"></span>
					<% end %>
				</div>
				<div class="memos__pickup">
					<% if memo.pickup == 1 %>
						<span class="glyphicon glyphicon-ok" aria-hidden="true" style="color: white;"></span>
					<% end %>
				</div>
				<div class="memos__destroy">
					<%= link_to memo_path(memo), method: :delete, data: { confirm: "本当に削除しますか？" } do %>
						<span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: white;" ></span>
						<% end %>
				</div>
				<div class="memos__content">
						<%= simple_format(memo.body) %>
				</div>
			</div>
		</div>
		</div>
	<% end %>
  </div>




</div>