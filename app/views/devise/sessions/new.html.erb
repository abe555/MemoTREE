<div class="home_container1">

  <div class="enter">

    <p class="enter__ttl">ログイン</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="enter__field">
        <div class="enterform">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "お名前", class: 'enterform__field' %>
        </div>
        <div class="enterform">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: 'enterform__field' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="enter__field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="enterform">
          <%= f.submit "ログイン", class: "btn btn-success enterform__btn" %>

          <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn btn-primary enterform__btn" %>
        </div>
      </div>

    <% end %>

    <div class="easy-login">
        <p>↓テストユーザーとしてすぐログイン出来ます↓</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.hidden_field :name, value: 'テストユーザー' %>
            <%= f.hidden_field :password, value: 'testtest' %>
            <%= f.submit '簡単ログイン', class: 'btn btn-warning enterform__btn' %>
      <% end %>

    </div>

</div>