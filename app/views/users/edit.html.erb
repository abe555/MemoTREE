<div class="main-top">
	<!--タイトル-->
	<div class="page-ttl">
		<h2 class="page-ttl__mypage">編集ページ</h2>
	</div>

</div>
<div class="main-bottom-mypage">
	<!--会員情報-->
	<div class="mypage">
		<div class="user-info">
		<div class="user-info__info">
		<%= form_with(model: @user, url: update_mypage_path(@user), method: :patch, local: true) do |form| %>
			<table class="table">
				<tr>
					<td>登録名</td>
					<td><%= form.text_field :name, id: "name" %></td>
				</tr>
				<tr>
					<td>登録したメールアドレス</td>
					<td><%= form.text_field :email, autocomplete: "email" %></td>
				</tr>
			</table>
			<div class="mypage-edit-btn">
				<div class="mypage-edit-btn__back">
					<%= link_to 'マイページへ戻る', mypage_path, class: 'btn btn-success' %>
					<%= form.submit '編集内容を保存する', class: "btn btn-danger" %>
				</div>
				<div class="mypage-edit-btn__edit">
				</div>
			</div>
		<% end %>
		</div>
		</div>
	</div>
</div>
